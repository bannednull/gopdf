---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';

const { title = 'GoPDF' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <nav class="container mx-auto mb-5 border-b px-0 py-4">
      <h1 class="text-2xl font-medium">
        📝 Go<span class="text-lg text-amber-400">PDF</span>
      </h1>
    </nav>

    <slot />
  </body>
</html>
