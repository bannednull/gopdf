---
interface Props {
  name?: string;
  description?: string;
}

const { name, description } = Astro.props;
---

<div class="grid grid-cols-1 gap-5 md:grid-cols-5">
  <div class="col-span-2">
    <h1 class="mb-1 text-3xl font-black">{name}</h1>
    <h2 class="text-gray-500">
      {description}
    </h2>
  </div>

  <div class="col-span-3 rounded-lg bg-white shadow-sm">
    <slot />
  </div>
</div>
